{% extends 'loginTemplate.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <div class="container mainLogin">

        <div class="w-100 vLogin"></div>

        <div class="row justify-content-center align-items-center">

        <form class="col-10 col-sm-8 col-md-6 col-lg-4 text-center formLogin" method="post" action="{{ path('login') }}">

            <h3 class="mt-2">Autenticación requerida</h3>

            <div class="form-group">
                <input type="email" id="emailUsuario" class="form-control" name="emailUsuario" placeholder="E-mail" required>
            </div>

            <div class="form-group">
                <input type="password" id="passwordEmpleado" class="form-control" name="passwordUsuario" placeholder="Password" required>
            </div>

            {% if error %}
                <span class="loginError">Usuario o contraseña incorrecta</span><br>
            {% endif %}

            <input type="submit" value="Entrar">

        </form>

        </div>

    </div>

{% endblock %}
